<table class="table table-sm">
	<thead class="thead-light">
		<tr>
			<th></th>
			<th>Code Organisation</th>
			<th>Code grille tarifaire</th>
			<th>Date de début</th>
			<th>Date de fin</th>
			<th>nb article(s)</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		{% for gtaett in tgritarett %}
